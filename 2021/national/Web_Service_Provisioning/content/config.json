{
    "agent": {
        "run_as_user": "root"
    },
    "logs": {
        "logs_collected": {
            "files": {
                "collect_list": [
                    {
                        "file_path": "/var/log/app/app.log",
                        "log_group_name": "/aws/ec2/wsi",
                        "log_stream_name": "api_{instance_id}",
                        "retention_in_days": -1
                    }
                ]
            }
        }
    }
}